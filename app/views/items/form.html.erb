<div class="max-w-2xl mx-auto p-6 bg-white shadow rounded-lg space-y-6 w-full">

<div class="flex items-center gap-2">
<%= link_to list_path(@list), 
        class: "text-sm font-medium" do %>

        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />

        </svg>

      <% end %>

  <h1 class="text-2xl font-bold text-gray-800">
      <%= action_name == 'new' ? 'Novo Item' : 'Editar Item' %>
  </h1>

</div>

  <%= form_with(model: [@list, @item], class: "space-y-6") do |form| %>

  <div class="flex flex-col">
      <%= form.label :name, "Nome", class: "text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, 
        placeholder: "Digite o nome do item",
        class: "mt-1 border border-gray-300 rounded-lg p-2 text-gray-900 focus:ring-cyan-600 focus:border-cyan-600" %>
  </div>

  <div class="flex flex-col">
        <%= form.label :description, "Descrição", class: "text-sm font-medium text-gray-700" %>
        <%= form.text_area :description, 
          placeholder: "Digite a descrição do item",
          class: "mt-1 border border-gray-300 rounded-lg p-2 text-gray-900 focus:ring-primary focus:border-primary" %>
  </div>

  <div class="flex justify-end items-center gap-2">

  <% if action_name == 'edit' %>
    <%= form.button "Delete", formmethod: :delete, data: { turbo_confirm: 'Tem certeza?' }, class:"bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-lg shadow transition-all" %>
  <% end %>

      <%= form.submit "Salvar", 
        class: "bg-cyan-600 hover:bg-cyan-600/80 text-white font-medium py-2 px-4 rounded-lg shadow transition-all" %>
  </div>
  <% end %>
</div>