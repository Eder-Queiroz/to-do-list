<%= form_with model: @list, class: "space-y-6 w-full" do |form| %>

    <div class="flex flex-col">
        <%= form.label :name, class: "text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, 
            placeholder: "Digite o nome da lista", 
            class: "mt-1 border border-gray-300 rounded-lg p-2 text-gray-900 focus:ring-cyan-600 focus:border-cyan-600" %>
    </div>
    
    <div class="flex justify-end items-center">
        <%= form.submit "Salvar", 
            class: "bg-cyan-600 hover:bg-cyan-700 text-white font-medium py-2 px-4 rounded-lg shadow transition-all cursor-pointer" %>
    </div>
<% end %>