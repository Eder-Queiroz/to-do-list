<main class="w-screen flex flex-col p-4 bg-white shadow">
    <div class="flex justify-between w-full">
    <h1 class="text-2xl font-semibold text-text">Listas</h1>
     <%= link_to "Adicionar", new_list_path, class: "bg-cyan-600 hover:bg-cyan-700 text-white pointer rounded-md px-4 py-2" %>
    </div>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
<% if @lists.any? %>
<% @lists.each do |list| %>
<div class="p-4 border rounded shadow cursor-pointer bg-white hover:bg-gray-50 transition-all flex flex-col">
    <div class="flex items-center gap-2">
        <%= link_to list.name, list, 
                    class: "text-lg font-semibold text-text hover:text-primary transition-colors" %>
    </div>
</div>
<% end %>
<% else %>
<p class="text-gray-500 text-center col-span-full">
    Nenhuma lista encontrada. Clique em <strong> <%= link_to "Nova Lista", new_list_path%> </strong> para comeÃ§ar!
</p>
<% end %>
</div> 
</main>